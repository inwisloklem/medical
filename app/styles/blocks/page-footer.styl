.page-footer
  display: flex
  flex-direction: column
  align-items: center
  overflow: hidden
  background-color: $linen

  @media $tablet-desktop
    background-image: url("../img/background-splash-2.png"), linear-gradient(to top, $tangaroa 0, $tangaroa 20px, transparent 20px, transparent 100%)
    background-position: center top -300px, center bottom
    background-repeat: no-repeat

  &__note
    margin-top: -70px
    color: $mine-shaft
    text-align: center
    font(20px, 30px, 600, uppercase)

  &__text
    margin-top: 30px
    margin-bottom: 30px
    color: $mine-shaft
    text-align: center
    font(18px, 24px, 600, uppercase)

    @media $tablet
      font(22px, 32px)

    @media $desktop
      font(26px, 36px)

  &__timer
    margin-bottom: 60px

    @media $desktop
      margin-bottom: 80px
