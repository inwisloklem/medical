.page-header
  position: relative
  overflow: hidden
  background-color: $pot-pourri
  background-image: linear-gradient($almond 0, $pot-pourri 50%, $dawn-pink 100%)

  @media $tablet-desktop
    background-image: url("../img/background-girl.png"), linear-gradient($almond 0, $pot-pourri 50%, $dawn-pink 100%)
    background-position: left calc(50% - 230px) bottom, center top
    background-repeat: no-repeat

  @media $desktop
    background-image: url("../img/background-girl.png"), url("../img/background-flowers.png"), linear-gradient($tangaroa 0, $tangaroa 50px, transparent 50px, transparent 100%), linear-gradient(to bottom, $almond 0, $pot-pourri 50%, $dawn-pink 100%)
    background-position: left calc(50% - 100px) bottom, left calc(50% - 300px) bottom, center top, center top

  @media $tablet-desktop
    &::after
      position: absolute
      bottom: 0
      left: 0
      z-index: 10
      display: block
      width: 100%
      height: 94px
      background-color: transparent
      background-image: url("../img/background-curl-dark.png")
      background-position: contain
      background-size: 100% 94px
      content: ""

  &__outer
    @media $desktop
      margin: auto
      max-width: 1200px
      border-top: 25px solid $tangaroa
      box-shadow: 0 0 51px rgba($catalina-blue, 0.2)

  &__visit
    display: none

    @media $tablet-desktop
      display: inline

  &__hgroup
    margin-bottom: 50px
    padding: 20px
    background-color: $catalina-blue
    color: $white
    text-align: center

  &__title
    font(24px, 38px)

  &__note
    font(28px, 37px, 600)

  &__inner
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center

    @media $tablet-desktop
      margin-left: 450px

    @media $desktop
      margin-left: 700px

  &__wrapper
    margin-top: 15px
    text-align: center

  &__motto
    margin-top: 15px
    margin-bottom: 15px
    text-transform: none
    width: 300px
    height: 92px
    background-image: url("../img/text-motto.png")
    background-position: top center
    background-size: contain
    background-repeat: no-repeat
    font-size: 0

    @media $tablet-desktop
      margin-bottom: 55px
      width: 424px
