.forbidden
  position: relative
  overflow: auto
  background-color: $linen
  background-image: linear-gradient(to top, $azalea 0, $linen 50%, $linen 100%)

  @media $tablet-desktop
    &::before
      position: absolute
      top: 0
      left: 0
      display: block
      width: 100%
      height: 84px
      background-color: $white
      background-image: url("../img/background-curl-light.png")
      background-position: contain
      background-size: 100% 84px
      content: ""

  &__title
    margin-top: 30px
    margin-bottom: 30px
    color: $mine-shaft
    text-align: center
    font(18px, 24px, 600, uppercase)

    @media $tablet
      font(22px, 32px)

    @media $desktop
      font(26px, 36px, 600, uppercase)

  &__list
    margin-bottom: 30px
    color: $mine-shaft
    list-style-type: none
    font(16px, 22px, 400)

    @media $tablet
      font(18px)

    @media $desktop
      padding: 0 200px
      font(22px)

  &__item
    position: relative
    margin-bottom: 15px
    padding-left: 50px

    &::before
      position: absolute
      top: 50%
      left: 15px
      display: block
      width: 12px
      height: 12px
      border-radius: 50%
      background-color: $mine-shaft
      content: ""

      transform: translateY(-50%)
