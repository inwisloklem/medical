.regform
  width: 385px
  height: 385px
  border-top: 1px solid transparent
  border-radius: 50%
  background-color: $vanilla-ice

  &--shadow
    @media $tablet-desktop
      box-shadow: 0 10px 10px 0 rgba($black, 0.15)

  &__form
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center

  &__title
    margin: auto
    margin-top: 60px
    margin-bottom: 20px
    width: 255px
    color: $paprika
    text-align: center
    font(23px, 34px)

  &__city
    text-decoration: underline

  &__name
  &__tel
    margin-bottom: 20px
    padding: 0 15px
    width: 250px
    height: 30px
    outline-color: $toledo
    border: none
    border-radius: 5px
    color: $scorpion
    font(13px, 37px, 400, uppercase)
